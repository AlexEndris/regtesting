@using RegTesting.Mvc.Models
@model CreateTestsuiteModel

@{
    ViewBag.Title = "New Testsuite";
	IList<TestsuiteModel> lstTestsuites = ((IList<TestsuiteModel>)ViewBag.LstTestsuites);
	lstTestsuites.Insert(0,new TestsuiteModel{ID = 0,Name = "No. Create a empty testsuite."});
	SelectList selectListTestsuites = new SelectList(lstTestsuites, "ID", "Name");
}

<h2>New Testsuite</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Testsuite</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
	    <div class="editor-field">
		    @Html.EditorFor(model => model.Description)
		    @Html.ValidationMessageFor(model => model.Description)
	    </div>
		<div class="editor-label">
			@Html.LabelFor(model => model.CopyTestsuiteSettings, "Copy settings from other testsuite")
		</div>
	    <div class="editor-field">
			@Html.DropDownListFor(m => m.CopyTestsuiteSettings, selectListTestsuites)
		</div>

	    <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
