@using RegTesting.Mvc.Models
@model IList<int>

@{
	ViewBag.Title = "Edit Testsuite - RegTesting";
	var browsers = ((List<BrowserModel>) ViewBag.LstBrowsers);
}

<h2>Edit Testsuite - Set Browsers</h2>
<fieldset>
	<legend>Browser</legend>
	<form method="post" action="@Url.Action("BrowsersChanged")">

	
		<input type = "hidden" name = "testsuite" value = "@ViewBag.Testsuite" />

		@foreach (BrowserModel browserModel in browsers)
		{
			if (!Model.Contains(browserModel.ID))
			{
				<input type = "checkbox" name = "browsers" value = "@browserModel.ID"/>
				@browserModel.Name
				<br/>
			}
			else
			{
				<input type = "checkbox" name = "browsers" value = "@browserModel.ID" checked="checked" />
				@browserModel.Name
				<br/>
			}
		}
		<br/>
		<input type="submit" value="Save"/>
	</form>
</fieldset>

<div>
	@Html.ActionLink("Back", "Edit", new {id = ViewBag.Testsuite})
</div>