@using RegTesting.Contracts
@model IList<RegTesting.Contracts.TestsystemSummary>



<table class="table">
	<tr>
		<th>Branch</th>
		<th>Last full run</th>
	</tr>

	@foreach (TestsystemSummary testsystemSummary in Model)
	{
		string strClass = "resultsmall label label-" + StatusHelper.GetStatusString(testsystemSummary.TestsystemStatus);
		<tr>
			<td>@Html.ActionLink(testsystemSummary.TestsystemName, "Index", "Testing", new {testsystem = testsystemSummary.TestsystemID, testsuite = testsystemSummary.TestsuiteID}, null)</td>
			<td>
				<span class="@strClass">
					@{if(testsystemSummary.LastChangeDate.Year > 1) {
						  @testsystemSummary.LastChangeDate
					  } else {
						  <text>Not tested yet.</text>
					  }}
				</span>
			</td>
		</tr>
	}
	
</table>    